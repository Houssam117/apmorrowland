<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        id="addArtistDialog"
        title="Nieuwe Artiest &amp; Planning"
        contentWidth="500px">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
                columnsXL="1" columnsL="1" columnsM="1">
                <f:content>
                    <core:Title text="Artiest Info" />
                    
                    <Label text="Naam" required="true"/>
                    <Input id="inputArtistName" placeholder="bv. Martin Garrix"/>

                    <Label text="Genre"/>
                    <Select id="inputGenre">
                        <core:Item key="Techno" text="Techno"/>
                        <core:Item key="House" text="House"/>
                        <core:Item key="DrumAndBass" text="Drum &amp; Bass"/>
                        <core:Item key="Pop" text="Pop"/>
                        <core:Item key="Hardstyle" text="Hardstyle"/>
                    </Select>

                    <Label text="Land"/>
                    <ComboBox id="inputCountry" placeholder="Kies land...">
                        <core:Item key="Belgium" text="Belgium"/>
                        <core:Item key="Netherlands" text="Netherlands"/>
                        <core:Item key="Germany" text="Germany"/>
                        <core:Item key="France" text="France"/>
                        <core:Item key="UK" text="UK"/>
                        <core:Item key="USA" text="USA"/>
                        <core:Item key="South Korea" text="South Korea"/>
                        <core:Item key="Australia" text="Australia"/>
                        <core:Item key="Italy" text="Italy"/>
                        <core:Item key="Spain" text="Spain"/>
                        <core:Item key="Brazil" text="Brazil"/>
                    </ComboBox>

                    <Label text="Label"/>
                    <Select id="inputLabel">
                        <core:Item key="Headliner" text="Headliner"/>
                        <core:Item key="Rising Star" text="Rising Star"/>
                        <core:Item key="Local Hero" text="Local Hero"/>
                    </Select>

                    <Label text="Biografie"/>
                    <TextArea id="inputBio" rows="2"/>

                    <Label text="Foto URL"/>
                    <Input id="inputImageUrl" placeholder="https://..."/>

                    <Label text="Spotify URL"/>
                    <Input id="inputSpotify" placeholder="[http://spotify.com/](http://spotify.com/)..."/>

                    <Label text="Instagram URL"/>
                    <Input id="inputInstagram" placeholder="[https://instagram.com/](https://instagram.com/)..."/>

                    <core:Title text="Planning &amp; Line-up" />

                    <Label text="Stage" required="true"/>
                    <l:HorizontalLayout>
                        <Select 
                            id="inputStage" 
                            items="{/Stages}"
                            width="240px"
                            forceSelection="false"
                            class="sapUiSmallMarginEnd">
                            <core:Item key="{ID}" text="{name}" />
                        </Select>
                        
                        <Button 
                            icon="sap-icon://add" 
                            type="Transparent"
                            text="Nieuw"
                            press=".onAddStage"
                            tooltip="Voeg een nieuw podium toe"/>
                    </l:HorizontalLayout>

                    <Label text="Startmoment" required="true"/>
                    <DateTimePicker 
                        id="inputStartTime" 
                        displayFormat="dd MMM yyyy, HH:mm"
                        placeholder="Kies datum &amp; tijd"/>

                    <Label text="Eindmoment" required="true"/>
                    <DateTimePicker 
                        id="inputEndTime" 
                        displayFormat="dd MMM yyyy, HH:mm"
                        placeholder="Kies datum &amp; tijd"/>

                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Opslaan &amp; Plannen" type="Emphasized" press=".onSaveArtist"/>
        </beginButton>
        <endButton>
            <Button text="Annuleren" press=".onCancelArtist"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>