<mvc:View
    controllerName="ns.artists.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="listPage" title="Orders">
        
        <headerContent>
            <Button icon="sap-icon://home" tooltip="Terug naar Home" press=".onNavHome" />
        </headerContent>

        <content>
            <Table
                id="ordersTable"
                items="{
                    path: '/Orders',
                    sorter: {
                        path: 'orderDate',
                        descending: true
                    }
                }"
                growing="true"
                growingThreshold="20"
                width="auto"
                class="sapUiResponsiveMargin">
                
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Overzicht" level="H2"/>
                        <ToolbarSpacer />

                        <SearchField 
                            width="25%" 
                            id="searchField"
                            placeholder="Zoek klant..." 
                            liveChange=".onFilter" />

                        <Select id="statusFilter" change=".onFilter" forceSelection="false" type="IconOnly" icon="sap-icon://filter" tooltip="Filter op status">
                            <core:Item key="" text="Alle Statussen" />
                            <core:Item key="Paid" text="Betaald" />
                            <core:Item key="Pending" text="In Behandeling" />
                            <core:Item key="Cancelled" text="Geannuleerd" />
                        </Select>

                        <Button icon="sap-icon://sort" press=".onSort" tooltip="Sorteer op Datum"/>

                        <ToolbarSeparator />

                        <Button 
                            text="Nieuwe Order" 
                            icon="sap-icon://add" 
                            type="Emphasized" 
                            press=".onCreateOrder"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column><Text text="Klant" /></Column>
                    <Column hAlign="End"><Text text="Bedrag" /></Column>
                    <Column hAlign="Center"><Text text="Status" /></Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation" press=".onPress">
                        <cells>
                            <ObjectIdentifier title="{customerName}" text="{orderDate}"/>
                            <Text text="{
                                path: 'totalAmount', 
                                type: 'sap.ui.model.type.Float', 
                                formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}
                            } EUR" />
                            <ObjectStatus 
                                text="{status}" 
                                state="{= ${status} === 'Paid' ? 'Success' : (${status} === 'Cancelled' ? 'Error' : 'Warning') }" 
                                icon="{= ${status} === 'Paid' ? 'sap-icon://accept' : (${status} === 'Cancelled' ? 'sap-icon://decline' : 'sap-icon://pending') }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>