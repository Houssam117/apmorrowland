<mvc:View
    controllerName="ns.artists.controller.Artists"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    
    <Page id="page" title="Artist Management">
        <headerContent>
            <Button icon="sap-icon://home" tooltip="Terug naar Home" press=".onNavHome" />
        </headerContent>
        <content>
            <Table 
                id="artistsTable"
                items="{
                    path: '/ArtistsLeaderboard',
                    sorter: {
                        path: 'name'
                    }
                }"
                width="auto"
                growing="true"
                growingThreshold="20"
                class="sapUiResponsiveMargin">
                
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar">
                        <Title id="_IDGenTitle1" text="Line-up" level="H2"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                        
                        <Button id="_IDGenButton3" 
                            icon="sap-icon://add" 
                            text="Nieuwe Artiest"
                            type="Emphasized"
                            press=".onOpenAddArtistDialog"/>

                        <SearchField id="_IDGenSearchField" width="30%" search=".onSearch" placeholder="Zoek artiest..."/>
                        <Button id="_IDGenButton4" icon="sap-icon://sort" press=".onSort" tooltip="Sorteer"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="_IDGenColumn" width="6rem">
                        <Text id="_IDGenText" text="" />
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText1" text="Artiest" />
                    </Column>
                    <Column id="_IDGenColumn2" minScreenWidth="Tablet" demandPopin="true">
                        <Text id="_IDGenText2" text="Genre" />
                    </Column>
                    <Column id="_IDGenColumn3" minScreenWidth="Tablet" demandPopin="true">
                        <Text id="_IDGenText3" text="Land" />
                    </Column>
                    <Column id="_IDGenColumn4" hAlign="End">
                        <Text id="_IDGenText4" text="Rating" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem" type="Navigation" press=".onPress">
                        <cells>
                            <Avatar id="_IDGenAvatar" 
                                src="{imageUrl}" 
                                displaySize="M" 
                                displayShape="Circle"/>
                                
                            <ObjectIdentifier id="_IDGenObjectIdentifier1" 
                                title="{name}" 
                                text="{label}"/>
                            
                            <Text id="_IDGenText5" text="{genre}"/>
                            <Text id="_IDGenText6" text="{country}"/>
                            
                            <RatingIndicator id="_IDGenRatingIndicator" 
                                maxValue="5" 
                                value="{averageRating}" 
                                iconSize="16px" 
                                editable="false"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>