<mvc:View
    controllerName="ns.artists.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="listPage" title="Orders">
    <headerContent>
            <Button icon="sap-icon://home" tooltip="Terug naar Home" press=".onNavHome" />
  
            <Button id="_IDGenButton8" icon="sap-icon://sort" press=".onSort" />
        </headerContent>
        <content>
            <Table
                id="ordersTable"
                items="{/Orders}"
                mode="SingleSelectMaster"
                selectionChange=".onSelectionChange"
                growing="true"
                growingThreshold="20">
                
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="_IDGenTitle5" text="Overzicht" level="H2"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                        <Button id="_IDGenButton9" 
                            text="Nieuwe Order" 
                            icon="sap-icon://add" 
                            type="Emphasized" 
                            press=".onCreateOrder"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="_IDGenColumn6"><Text id="_IDGenText8" text="Klant" /></Column>
                    <Column id="_IDGenColumn7" hAlign="End"><Text id="_IDGenText9" text="Bedrag" /></Column>
                    <Column id="_IDGenColumn8" hAlign="Center"><Text id="_IDGenText10" text="Status" /></Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem1" type="Navigation">
                        <cells>
                            <ObjectIdentifier id="_IDGenObjectIdentifier" title="{customerName}" text="{orderDate}"/>
                            
                            <Text id="_IDGenText11" text="{
                                path: 'totalAmount', 
                                type: 'sap.ui.model.type.Float', 
                                formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}
                            } EUR" />
                            
                            <ObjectStatus id="_IDGenObjectStatus2" 
                                text="{status}" 
                                state="{= ${status} === 'Paid' ? 'Success' : 'Warning' }" 
                                icon="{= ${status} === 'Paid' ? 'sap-icon://accept' : 'sap-icon://pending' }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>