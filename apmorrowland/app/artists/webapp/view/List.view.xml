<mvc:View
    controllerName="ns.artists.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="listPage" title="Orders">
        
        <headerContent>
            <Button icon="sap-icon://home" tooltip="Terug naar Home" press=".onNavHome" />
            <Button id="_IDGenButtonSort" icon="sap-icon://sort" press=".onSort" />
        </headerContent>

        <content>
            <Table
                id="ordersTable"
                items="{/Orders}"
                growing="true"
                growingThreshold="20"
                width="auto"
                class="sapUiResponsiveMargin">
                
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="_IDGenTitle5" text="Overzicht" level="H2"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                        <Button id="_IDGenButtonAdd" 
                            text="Nieuwe Order" 
                            icon="sap-icon://add" 
                            type="Emphasized" 
                            press=".onCreateOrder"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="_IDGenColumnCustomer">
                        <Text text="Klant" />
                    </Column>
                    <Column id="_IDGenColumnAmount" hAlign="End">
                        <Text text="Bedrag" />
                    </Column>
                    <Column id="_IDGenColumnStatus" hAlign="Center">
                        <Text text="Status" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem1" type="Navigation" press=".onPress">
                        <cells>
                            <ObjectIdentifier 
                                title="{customerName}" 
                                text="{orderDate}"/>
                            
                            <Text text="{
                                path: 'totalAmount', 
                                type: 'sap.ui.model.type.Float', 
                                formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}
                            } EUR" />
                            
                            <ObjectStatus 
                                text="{status}" 
                                state="{= ${status} === 'Paid' ? 'Success' : 'Warning' }" 
                                icon="{= ${status} === 'Paid' ? 'sap-icon://accept' : 'sap-icon://pending' }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>