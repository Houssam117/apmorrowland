<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="reviewDialog"
        title="Schrijf een Review">
        <content>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
               <Label text="Titel" />
        <Input id="reviewTitleInput" placeholder="Korte samenvatting..." />

        <Label text="Beoordeling" />
        <RatingIndicator id="reviewRatingInput" maxValue="5" />

        <Label text="Jouw ervaring" />
        <TextArea id="reviewTextInput" rows="4" />
            </VBox>
        </content>
        <beginButton>
            <Button id="_IDGenButton" text="Verzenden" type="Emphasized" press=".onSaveReview"/>
        </beginButton>
        <endButton>
            <Button id="_IDGenButton1" text="Annuleren" press=".onCancelReview"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>