<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="reviewDialog"
        title="Schrijf een Review">
        <content>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <Label id="_IDGenLabel" text="Jouw Naam" labelFor="inputName"/>
                <Input id="inputName" placeholder="bv. Jonas"/>

                <Label id="_IDGenLabel1" text="Score" labelFor="inputRating" class="sapUiSmallMarginTop"/>
                <RatingIndicator id="inputRating" maxValue="5" class="sapUiSmallMarginBottom"/>

                <Label id="_IDGenLabel2" text="Jouw Mening" labelFor="inputComment"/>
                <TextArea id="inputComment" rows="4" width="100%" placeholder="Vertel ons wat je ervan vond..."/>
            </VBox>
        </content>
        <beginButton>
            <Button id="_IDGenButton" text="Verzenden" type="Emphasized" press=".onSaveReview"/>
        </beginButton>
        <endButton>
            <Button id="_IDGenButton1" text="Annuleren" press=".onCancelReview"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>